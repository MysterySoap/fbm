# Place this NEXT TO your Dockerfile and docker-compose.yml
APP_NAME=Marketplace
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack

# Database (must match docker-compose values)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=marketplace
DB_USERNAME=eckmar
DB_PASSWORD=eckmarpass

# Caching / Queue
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_DRIVER=sync

# Redis (for caching/queues, optional but recommended)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Elasticsearch for search
SCOUT_DRIVER=elasticsearch
ELASTICSEARCH_HOST=http://elasticsearch:9200
ELASTICSEARCH_INDEX=marketplace

# Mail (optional for testing; leave as-is for now)
MAIL_DRIVER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="test@example.com"
MAIL_FROM_NAME="${APP_NAME}"
